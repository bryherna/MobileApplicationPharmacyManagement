<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:circularflow_defaultRadius="@dimen/cardview_default_radius"
    tools:context=".LOGIN">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_fondo_login"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="259dp"
            app:srcCompat="@drawable/ic_baseline_account_circle_24" />

        <EditText
            android:id="@+id/edt_ingresar_usuario"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/contorno_circular_edt"
            android:drawableLeft="@drawable/icono_ingresar_usuario"
            android:drawablePadding="20dp"
            android:ems="10"
            android:hapticFeedbackEnabled="false"
            android:hint="Ingrese su usuario"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edt_ingresar_contra"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/contorno_circular_edt"
            android:drawableLeft="@drawable/icono_ingresar_password"
            android:drawablePadding="20dp"
            android:ems="10"
            android:hint="Ingrese su contrase単a"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <CheckBox
                android:id="@+id/cb_recordarContra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Recordar Contrase単a"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_recuperar_contrase単a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:text="recuperar contrase単a"
                android:textSize="10sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#00BCD4"
            android:text="LOGIN" />

        <Button
            android:id="@+id/btn_registrarse"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#00BCD4"
            android:text="REGISTRARSE" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>